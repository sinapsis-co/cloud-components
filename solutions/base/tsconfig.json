{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": ".dist",
    "paths": {
      "services/*": ["./solutions/base/services/*"],
      "config/*": ["./solutions/base/config/*"],
      "templates/*": ["./solutions/base/notifications/templates/*"],
      "@sinapsis-co/cc-sdk/*": ["./sdk/*"],
      "@sinapsis-co/cc-core/*": ["./core/*"],
      "common/*": ["./core/common/*"],
      "prefab/*": ["./core/prefab/*"],
      "catalog/*": ["./sdk/catalog/*"],
      "error/*": ["./sdk/error/*"],
      "handler/*": ["./sdk/handler/*"],
      "integration/*": ["./sdk/integration/*"],
      "lib/*": ["./sdk/lib/*"],
      "util/*": ["./sdk/util/*"],
      "logger": ["./sdk/logger"],
      "error": ["./sdk/error"],
      "tracing": ["./sdk/tracing"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["cdk.out", "node_modules/**/*", ".dist/**/*", "./frontend/**/*"]
}
