{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": ".dist",
    "typeRoots": ["../node_modules/@types"],
    "rootDir": ".",
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "common/*": ["./common/*"],
      "prefab/*": ["./prefab/*"]
