{
  "exclude": ["**/node_modules/**/*", "**/.dist/**/*", "**/cdk.out/**/*", "**/*.js"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "preserveSymlinks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@sinapsis-cloud-components/sdk/*": ["./sdk/*"],
      "@sinapsis-cloud-components/core/*": ["./core/*"],
      "common/*": ["./core/common/*"],
      "prefab/*": ["./core/prefab/*"],
      "catalog/*": ["./sdk/catalog/*"],
      "model/*": ["./sdk/model/*"],
      "error/*": ["./sdk/error/*"],
      "handler/*": ["./sdk/handler/*"],
      "integration/*": ["./sdk/integration/*"],
      "lib/*": ["./sdk/lib/*"],
      "util/*": ["./sdk/util/*"],
      "model": ["./sdk/model"],
      "logger": ["./sdk/logger"],
      "error": ["./sdk/error"],
      "tracing": ["./sdk/tracing"]
    }
  }
}
